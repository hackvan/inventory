<div class="col-sm-10 col-sm-offset-1">
  <h1>Productos</h1>
  <p class="text-right"> <%= link_to "Nuevo Producto", new_product_path, class: "btn btn-primary" %> </p>
  <table class="table table-hover">
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Categorias</th>
      <th></th>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price, precision: 2) %></td>
        <td><%= product.categories.pluck(:name).join(", ") %></td>
        <td>
          <%= link_to "Editar", edit_product_path(product) %>
          <%= link_to "Eliminar", product, method: :delete %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
