<h1>Products</h1>
<p> <%= link_to "Nuevo Producto", new_product_path, class: "btn btn-primary text-right" %> </p>
<table class="table table-hover">
  <tr>
    <th>Nombre</th>
    <th>Precio</th>
    <th>Categorias</th>
    <th></th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td>
        <%= product.categories.map(&:name).to_sentence(last_word_connector: ' y ') %>
      </td>
      <td>
        <%= link_to "Editar", edit_product_path(product) %>
        <%= link_to "Eliminar", product, method: :delete %>
      </td>
    </tr>
  <% end %>
</table>
